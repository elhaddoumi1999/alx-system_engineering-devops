#!/usr/bin/env bash
# installs and configures HAProxy in my lb01 server

sudo apt-get update
sudo apt-get install -y haproxy

echo "ENABLED=1" >> /etc/default/haproxy

echo "
    listen load_balancer
    bind *:80
    mode http
    balance roundrobin
    option httpclose
    option forwardfor
    server 382976-web-01 100.25.179.61 check
    server 382976-web-02 18.207.140.4 check
    option httpchk
" >> /etc/haproxy/haproxy.cfg
sudo service haproxy start
